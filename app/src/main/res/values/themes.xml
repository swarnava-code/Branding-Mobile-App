<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar"><!--DayNight.DarkActionBar-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20dp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="txt_heading">
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/roboto_black</item>
    </style>
    <style name="txt_body">
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/stylescript_regular</item>
    </style>

    <style name="title_list">
        <item name="android:textColor">@color/list_title_txt</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="fontFamily">@font/stylescript_regular</item>
    </style>
    <style name="body_list">
        <item name="android:textColor">@color/list_body_txt</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/body</item>
    </style>


</resources>