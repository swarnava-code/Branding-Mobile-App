<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicesActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_h"
            android:background="@drawable/header1"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/header_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/adosy_logo" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_margin="15dp"
                    app:cardBackgroundColor="@color/list_bg"
                    app:cardCornerRadius="5dp"
                    android:background="#545454"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:layout_margin="15dp"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/sample_logo" />

                            <TextView
                                android:gravity="center"
                                android:layout_gravity="center"
                                style="@style/title_list"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:onClick="click"
                                android:text="Digital Marketing" />


                        </LinearLayout>


                        <LinearLayout
                            android:padding="5dp"
                            android:id="@+id/linear"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:textColor="#ffffff"/>

                            <TextView
                                style="@style/body_list"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Web Dev"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="App Dev"
                                style="@style/body_list" />
                        </LinearLayout>
                    </LinearLayout>






                </androidx.cardview.widget.CardView>




                <TextView
                    android:textSize="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="45gh"/>
                <TextView
                    android:textSize="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="45gh"/>

                <TextView
                    android:textSize="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="45gh"/>
                <TextView
                    android:textSize="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="45gh"/>
                <TextView
                    android:textSize="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="45gh"/>
                <TextView
                    android:textSize="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="45gh"/>
                <TextView
                    android:textSize="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="45ghEND"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>















</androidx.constraintlayout.widget.ConstraintLayout>